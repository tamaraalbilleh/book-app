<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../layout/head')%>
    <title>Home Page</title>
    <link rel="stylesheet" href="./public/style/reset.css">
    <link rel="stylesheet" href="./public/style/base.css">
    <link rel="stylesheet" href="./public/style/layout.css">
    <link rel="stylesheet" href="./public/style/modules.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <%-include('../layout/header')%>
    <h2 class="h2">Saved Books</h2>
    <main>
        <p> <%= result.length %> Books In The Collection</p>
        <section>
            <% result.forEach (results=>{ %> 
                <img src="<%= results.img %>" alt="">
                <h2><%= results.title %> </h2>
                <h3><%= results.author %> </h3>
                <p><%= results.isbn%> </p>
         <form action=<%=`/books/${results.id}`%> method="GET">
      
        <button type="submit">View Details</button>
        </form>
        <% }) %> 
        </section>
    </main>
    <%-include('../layout/footer')%>
    <script src="./public/style/menu.js"></script>
</body>
</html>