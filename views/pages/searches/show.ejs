<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../layout/head')%>
    <title>Search Result</title>
    <link rel="stylesheet" href="../public/style/reset.css">
    <link rel="stylesheet" href="../public/style/base.css">
    <link rel="stylesheet" href="../public/style/layout.css">
    <link rel="stylesheet" href="../public/style/modules.css">
</head>

<body>
    <%- include('../../layout/header')%>
    <h2 class="h2">Search Result</h2>
    <main>
    <% search.forEach(item => { %>
        <section> 
            <img src="<%= item.img %> " alt="">
            <h2><%= item.title %> </h2>
            <h3><%= item.author %> </h3>
            <p><%= item.isbn %> </p>
            <form action="/books" method="POST">
                <input type="hidden" value="<%= item.img %> " name="img">
                <input type="hidden" value="<%= item.title %> " name="title">
                <input type="hidden" value="<%= item.author %> " name="author">
                <input type="hidden" value="<%= item.isbn %> " name="isbn">
                <input type="hidden" value="<%= item.description%>" name="description">
                <input type="hidden" value="<%= item.bookshelf%>" name="bookshelf">
                <input type="hidden" value="<%= item.id%>" name="id">
                <button type="submit">Select This Book</button>
            </form>   
        </section>
    <%  }); %>

</main>
<%- include('../../layout/footer')%>
    <script src="../public/style/menu.js"></script>
</body>
</html>